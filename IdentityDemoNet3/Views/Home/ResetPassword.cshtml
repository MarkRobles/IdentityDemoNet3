@model ResetPasswordVM
<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <h1 class="text-center">Registrarse</h1>
        <form asp-action="ResetPassword" method="post" class="form-horizontal">
            <input type="hidden" asp-for="Token">
            <input type="hidden" asp-for="Correo">
            <div class="form-group">
                <label asp-for="Contraseña" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Contraseña" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmarContraseña" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmarContraseña" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>